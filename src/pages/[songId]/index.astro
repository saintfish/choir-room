---
import songList from "@root/songs.yml";

export function getStaticPaths() {
  return songList.songs.map((song) => [
    {
      params: { songId: song.id },
      props: { song },
    },
  ]);
}

const { song } = Astro.props;

import Base from "@layouts/Base.astro";
import Song from "@components/Song";
---

<Base title={song.name}>
  <div class="pb-3">
    <a href="/">&#10094; Home</a>
  </div>
  <Song song={song} client:only="react" />
</Base>
