---
export interface Props {
  title?: string;
}

const { title = "Choir Room" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="max-w-screen-sm mx-auto p-3">
      <h1 class="text-2xl leading-10 py-5">{title}</h1>
      <slot />
    </div>
  </body>
</html>
