---
export interface Props {
  title?: string;
}

const { title = "Choir Room" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-F65459D7F2"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-F65459D7F2");
    </script>
  </head>
  <body>
    <div class="max-w-screen-sm mx-auto p-3">
      <h1 class="text-2xl leading-10 pt-5 pb-2">{title}</h1>
      <slot />
    </div>
  </body>
</html>
